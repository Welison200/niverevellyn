        }

        .container {
            position: relative;
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            width: 90%;
            max-width: 600px;
        }

        .initial-overlay {
            position: fixed;
            top: 0;
